{
  "name": "sb-fotocopy-pos",
  "version": "1.0.0",
  "description": "Aplikasi POS untuk SB Fotocopy",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "pos",
    "fotocopy",
    "electron"
  ],
  "author": "SB Fotocopy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.sbfotocopy.pos",
    "productName": "SB Fotocopy POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "database.js",
      "index.html",
      "styles.css",
      "assets/**/*"
    ],
    "win": {
      "icon": "assets/logosb.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/logosb.png"
    },
    "linux": {
      "icon": "assets/logosb.png"
    }
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  }
}
